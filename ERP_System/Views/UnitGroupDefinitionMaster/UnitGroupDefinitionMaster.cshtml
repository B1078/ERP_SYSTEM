<!--  Menu analytics start -->
@{
    string? UserName = ViewContext.HttpContext.Session.GetString("UserName");
    DateTime currentDate = DateTime.Now;
    string formattedDate = currentDate.ToString("dd-MM-yyyy");

}
<div class="col-xl-12 col-md-12">
    <div class="card table-card">
        <div class="card-header">
            <h5 class="webtitle">Unit Group Defination  </h5>
            <div class="card-header-right">
                <ul class="list-unstyled card-option">
                    <li><i class="fa fa fa-wrench open-card-option"></i></li>
                    <li><i class="fa fa-window-maximize full-card"></i></li>
                    <li><i class="fa fa-minus minimize-card"></i></li>
                    <li><i class="fa fa-refresh reload-card"></i></li>
                    <li hidden><i class="fa fa-trash close-card"></i></li>
                </ul>
            </div>
        </div>
        <div class="card-block shadow">
            <!-- Row start -->
            <div class="row p-2">
                <div class="col-lg-12 col-xl-12 ">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs  tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" id="Create_UGD_Tab" href="#Cerate_UGD" role="tab">Create Unit Group Defination </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#All_UGD" role="tab">All Unit Group Defination </a>
                        </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content tabs card-block">
                        <div class="tab-pane active p-0 m-0 mt-2" id="Cerate_UGD" role="tabpanel">
                            <form id="UOM_mst_Form" class="w-100 mt-4 p-4 border">
                                <div class="row justify-content-end mt-1 mb-3">
                                    <div class="col-auto">
                                        <label class="switch">
                                            <input type="checkbox" value="Y" checked name="IsActive" id="IsActive" class="toggleSwitch form-control form-control-sm UOM_Active">
                                            <span class="slider"></span>
                                        </label>
                                    </div>
                                </div>
                                <hr>
                                <div class="row mt-2">
                                    <input hidden name="UomGRPDefId" id="UomGRPDefId" value="" type="text" placeholder="UomGRPDef Id" class="form-control form-control-sm Uom_Form_Elem" />
                                    <div class="col-md-6 mt-1 mb-1">
                                        <label for="StkUomGRPId"> Stock Name</label>
                                        <select id="StkUomGRPId" name="StkUomGRPId" class="form-control form-control-sm  Uom_Form_Elem">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 mt-1 mb-1">
                                        <label for="StkQty">Stock Qty</label>
                                        <input name="StkQty" id="StkQty" type="number" placeholder="From Volume" class="form-control form-control-sm Uom_Form_Elem" />
                                    </div>
                                    <div class="col-md-6 mt-1 mb-1">
                                        <label for="BaseUomGRPId">Base Unit Group</label>
                                        <select id="BaseUomGRPId" name="BaseUomGRPId" class="form-control form-control-sm  Uom_Form_Elem">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 mt-1 mb-1">
                                        <label for="BaseQty">Base Qty</label>
                                        <input name="BaseQty" id="BaseQty" type="number" placeholder="Base Qty" class="form-control form-control-sm  Uom_Form_Elem" />
                                    </div>
                                    <div class="col-md-3 mt-1 mb-1 d-none">
                                        <label for="UpdateDate">Updated On</label>
                                        <input readonly name="UpdateDate" id="UpdateDate" value="@formattedDate" type="text" placeholder="dd/mm/yy" class="form-control form-control-sm Uom_Form_Elem" />
                                    </div>
                                    <div class="col-md-3 mt-1 mb-1 d-none">
                                        <label for="UpdatedBy">Updated By</label>
                                        <input readonly name="UpdatedBy" id="UpdatedBy" value="@UserName" type="text" placeholder="Updated By" class="form-control form-control-sm Uom_Form_Elem" />
                                    </div>
                                    <div class="col-md-3 mt-1 mb-1 d-none">
                                        <label for="CreateDate">Created On</label>
                                        <input readonly name="CreateDate" id="CreateDate" value="@formattedDate" type="text" placeholder="dd/mm/yy" class="form-control form-control-sm Uom_Form_Elem" />
                                    </div>
                                    <div class="col-md-3 mt-1 mb-1 d-none">
                                        <label for="CreatedBy ">Created By</label>
                                        <input readonly name="CreatedBy" id="CreatedBy" value="@UserName" type="text" placeholder="Created By" class="form-control form-control-sm Uom_Form_Elem" />
                                    </div>
                                    <div class="col-md-12 mt-3">
                                        <button type="button" id="Form_Delete_btn1" style="display:none; width:80px;" class="btn ml-1 mr-1 btn-sm btn-danger">Delete</button>
                                        <button type="button" id="Form_Update_btn1" style="display:none; width:80px;" class="btn ml-1 mr-1 btn-sm text-white btn-info">Update</button>
                                        <button type="button" id="Form_Save_btn1" style=" width:80px;" class="btn ml-1 mr-1 btn-sm btn-success">Save</button>
                                        <button type="reset" id="Form_reset_btn1" style=" width:80px;" class="btn ml-1 mr-1 btn-sm btn-dark">Reset</button>
                                        <button type="reset" id="Form_reset_btn" style=" width:80px;" class="btn ml-1 mr-1 btn-sm btn-dark d-none">Reset</button>
                                    </div>
                                </div>
                            </form>


                        </div>
                        <div class="tab-pane p-3" id="All_UGD" role="tabpanel">
                            <div class="row p-3  mt-2 border">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped   table-hover table-bordered w-100" id="Table1">
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Row end -->
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        // Get Dropdown
        {
            // GET Country
            $.ajax({
                url: '@Url.Action("UGPCODE", "GetDropdownData")',
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    if (response.length > 0) {
                        let list = "<option value=''>Select</option>";
                        for (var i = 0; i < response.length; i++) {
                            list += "<option value='" + response[i].UomGRPId + "'>" + response[i].UomGRPCode + "-" + response[i].UomGRPName + "</option>";
                        }
                        $("#BaseUomGRPId").html(list);
                        $("#StkUomGRPId").html(list);
                    }
                },
                error: function (error) {
                    notify(error.responseText, "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                    console.error('Error:', error.responseText);
                }
            });


        }

        // Load table data on document ready
        LoadTableData();

        // Function to retrieve menu data and initialize DataTable
        function LoadTableData() {
            $.ajax({
                url: '@Url.Action("GETDATA", "UnitGroupDefinitionMaster")',
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    ApplyDatatable(response, "Table1");
                },
                error: function (error) {
                    notify(error.responseText, "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight");
                    console.error('Error:', error.responseText);
                }
            });
        }

        function ApplyDatatable(jsonData, Table_Id) {
            if ($.fn.DataTable.isDataTable('#' + Table_Id)) {
                $('#' + Table_Id).DataTable().destroy();
            }
            var table = $('#' + Table_Id).DataTable({
                data: jsonData,
                columns: [
                    {
                        data: null,
                        title: "Sr No",
                        className: 'tbl_Sr_no no-wrap text center',
                        render: function (data, type, row, meta) {
                            // 'meta.row' gives the index of the row
                            return meta.row + 1;
                        }
                    },
                    {
                        data: null,
                        title: 'Action',
                        render: function (data, type, row) {
                            // Customize the content of the image column
                            return '<center><i class="fa fa-edit table_edit1 text-primary mr-1"></i> <i class="fa fa-trash text-danger mr-2 table_delete1"></i></center>';

                        }
                    },
                    {
                        data: 'IsActive',
                        title: 'Active',
                        render: function (data, type, row) {
                            // Customize the content of the image column
                            if (data == "Y") {
                                return `<center><label style="margin:0px!important; padding:0px!important;" class="tblswitch p-0 m-0">
                                                                                    <input type="checkbox" disabled value="`+ data + `" checked name="IsActive" class="tbltoggleSwitch form-control form-control-sm ">
                                                                            <span class="tblslider"></span>
                                                                            </label></center>`;
                            } else {
                                return `<center><label class="tblswitch">
                                                                                        <input type="checkbox" disabled value="`+ data + `"  name="IsActive" class="tbltoggleSwitch form-control form-control-sm ">
                                                                                <span class="tblslider"></span>
                                                                            </label></center>`;
                            }

                        }
                    },
                    { data: 'UomGRPDefId', title: 'UomGRPDef Id', className: 'tbl_Main_ID1 text-center d-none' },
                    { data: 'StkUomGRPId', title: 'StkUomGRPId', className: 'tbl_StkUomGRPId text-center d-none' },
                    { data: 'StockUGrpCode', title: 'Stack code', className: 'tbl_StockUGrpCode' },
                    { data: 'StockUGrpName', title: 'Stock Name', className: 'tbl_StockUGrpName' },
                    { data: 'StkQty', title: 'Stock Qty', className: 'tbl_StkQty text-right' },
                    { data: 'BaseUomGRPId', title: 'BaseUomGRPId', className: 'tbl_BaseUomGRPId text-center d-none' },
                    { data: 'BaseGrpCode', title: 'Base Unit Code', className: 'tbl_BaseGrpCode' },
                    { data: 'BaseUGrpName', title: 'Base Unit Name', className: 'tbl_BaseUGrpName' },
                    { data: 'BaseQty', title: ' Base Qty', className: 'tbl_BaseQty text-right' }
                    // Add more columns as needed
                ],
                "columnDefs": [
                    { "targets": '_all', "className": 'dt-no-wrap' }
                ],
                ordering: false,
                paging: true,
                retrieve: true,
                searching: true,
                responsive: true,
                colReorder: false,
            });
        }
        // Add event listener for Save button
        $("#Form_Save_btn1").click(function () {
            let isValid = true;
            let formData = {};
            $(".UOM_mst_Form").removeClass("border-danger");

            // Loop through each input, select, and textarea in the form
            $("#UOM_mst_Form input, select, textarea").each(function () {
                var inputName = $(this).attr('name').trim();
                var inputValue = $(this).val().trim();

                // Handle textarea differently
                if ($(this).is('textarea')) {
                    inputValue = $(this).text().trim();
                }

                // Check if the input is mandatory and empty
                var mandatoryfields = ["StkUomGRPId", "StkQty", "BaseUomGRPId", "BaseQty"];

                var inputElement = $("#" + inputName);
                var inputId = inputElement.attr('id');
                var labelText = $("label[for='" + inputId + "']").text();
                if (mandatoryfields.includes(inputName) && inputValue === "") {
                    if (inputElement.hasClass("select2-hidden-accessible")) {
                        inputElement.next('.select2-container').addClass("select2-error");
                    } else {
                        inputElement.addClass("border-danger");
                    }
                    isValid = false;
                    notify("Please Fill " + labelText + " Details..!", "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                    return false;
                } else {
                    if (inputElement.hasClass("select2-hidden-accessible")) {
                        inputElement.next('.select2-container').removeClass("select2-error");
                    } else {
                        inputElement.removeClass("border-danger");
                    }
                }

                // Store the form data
                formData[inputName] = inputValue;
            });

            // If the form is valid, make the AJAX call
            if (isValid && Object.keys(formData).length !== 0) {
                $.ajax({
                    url: '@Url.Action("POSTDATA", "UnitGroupDefinitionMaster")',
                    type: 'POST',
                    dataType: 'json',
                    data: formData,
                    success: function (response) {

                        if (response !== "") {
                            notify(" Unit Group Defination  Added Successfully..!", "", "top", "right", "fa fa-check mr-2", "success", "animated fadeInRight", "animated fadeOutRight");
                            $("#UOM_mst_Form")[0].reset();
                            $("#Form_reset_btn").click()
                            LoadTableData(); // Refresh the table data
                        }
                    },
                    error: function (error) {
                        notify(error.responseText, "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight");
                        console.error('Error:', error.responseText);
                    }
                });
            }
        });


        // Add event listener for Update button
        $("#Form_Update_btn1").click(function () {
            let isValid = true;
            let formData = {};
            $(".UOM_Form_Elem").removeClass("border-danger");

            $("#UOM_mst_Form input,select,textarea").each(function () {
                var inputName = $(this).attr('name').trim();
                var inputValue = $(this).val().trim();

                if ($(this).is('textarea')) {
                    inputValue = $(this).text().trim();
                }

                var mandatoryfields = ["UomGRPDefId", "StkUomGRPId", "StkQty", "BaseUomGRPId", "BaseQty"];

                var inputElement = $("#" + inputName);
                var inputId = inputElement.attr('id');
                var labelText = $("label[for='" + inputId + "']").text();
                if (mandatoryfields.includes(inputName) && inputValue === "") {
                    if (inputElement.hasClass("select2-hidden-accessible")) {
                        inputElement.next('.select2-container').addClass("select2-error");
                    } else {
                        inputElement.addClass("border-danger");
                    }
                    isValid = false;
                    notify("Please Fill " + labelText + " Details..!", "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                    return false;
                } else {
                    if (inputElement.hasClass("select2-hidden-accessible")) {
                        inputElement.next('.select2-container').removeClass("select2-error");
                    } else {
                        inputElement.removeClass("border-danger");
                    }
                }

                formData[inputName] = inputValue;
            });

            // Call Api if form is valid
            if (isValid && Object.keys(formData).length !== 0) {
                $.ajax({
                    url: '@Url.Action("UPDATEDATA", "UnitGroupDefinitionMaster")',
                    type: 'POST',
                    dataType: 'json',
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            $("#UOM_mst_Form")[0].reset();
                            LoadTableData();
                            $("#Form_reset_btn").click()

                            HideBtn()
                            notify(response.message, "", "top", "right", "fa fa-check mr-2", "success", "animated fadeInRight", "animated fadeOutRight")
                        } else {
                            notify("Error To Updating Data", "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                        }
                    },
                    error: function (error) {
                        notify(error.responseText, "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                        console.error('Error:', error.responseText);
                    }
                });
            }
        });

        // Add event listener for Delete button
        $("#Form_Delete_btn1").click(function () {
            Delete1($("#UomGRPDefId").val());
        });

        // Add event listener for delete icon in table
        $(document).on("click", ".table_delete1", function () {
            var $row = $(this).closest("tr");
            var id = $row.find('td.tbl_Main_ID1').text();
            Delete1(id);
        });

        // Add event listener for edit icon in table
        $(document).on("click", ".table_edit1", function () {
            var $row = $(this).closest("tr");
            var rowObject = {};

            // Fetch data from the selected row
            $row.find('td').each(function (index) {
                var $td = $(this);
                var key = $td.closest('table').find('th').eq(index).text().trim().replace(/[.,()%\- ]/g, '');

                if ($td.find('input').length) {
                    rowObject[key] = $td.find('input').val();
                }
                else if ($td.find('textarea').length) {
                    rowObject[key] = $td.find('textarea').val();
                }
                else {
                    rowObject[key] = $td.text().trim();
                }
            });

            //  fetch form fields with selected row data
            $("#UomGRPDefId").val(rowObject.UomGRPDefId).trigger("change");
            $("#StkUomGRPId").val(rowObject.StkUomGRPId).trigger("change");
            $("#StkQty").val(rowObject.StockQty);
            $("#BaseUomGRPId").val(rowObject.BaseUomGRPId);
            $("#BaseQty").val(rowObject.BaseQty);
            $(".UOM_Active").val(rowObject.Active);

            if (rowObject.Active == "Y") {
                $(".UOM_Active").prop("checked", true);
            }
            if (rowObject.Active == "N") {
                $(".UOM_Active").prop("checked", false);
            }

            ShowBtn();
            $("#Create_UGD_Tab").click();
            console.log("All data in rowObject:", rowObject);
        });

        // Add event listener for Reset button
        $("#Form_reset_btn1").click(function () {
            $(".UOM_mst_Form").removeClass("border-danger");
            HideBtn();
        });

        // Function to handle form button visibility
        function ShowBtn() {
            $("#Form_Delete_btn1").show();
            $("#Form_Update_btn1").show();
            $("#Form_Save_btn1").hide();
        }

        function HideBtn() {
            $("#Form_Save_btn1").show();
            $("#Form_Delete_btn1").hide();
            $("#Form_Update_btn1").hide();
        }

        // Function to delete record
        function Delete1(ID) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'This Unit Group Defination  Is Permanently Delete From System..!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Delete',
                confirmButtonColor: 'red',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("DELETE", "UnitGroupDefinitionMaster")',
                        type: 'POST',
                        dataType: 'json',
                        data: { Id: ID },
                        success: function (response) {
                            if (response.success) {
                                $("#UOM_mst_Form")[0].reset();
                                LoadTableData();
                                $("#Form_reset_btn").click()

                                HideBtn();
                                notify(response.message, "", "top", "right", "fa fa-check mr-2", "success", "animated fadeInRight", "animated fadeOutRight")
                                Swal.fire('Deleted!', 'Your data has been deleted.', 'success');
                            } else {
                                notify("Error To Updating Data", "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                            }
                        },
                        error: function (error) {
                            notify(error.responseText, "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                            console.error('Error:', error.responseText);
                        }
                    });
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    Swal.fire('Cancelled', 'Your action has been cancelled.', 'error');
                }
            });
        }
    });

</script>