<script>
    $(document).ready(function () {
        $(".toggle-password").click(function () {
            var passwordField = $("#db_pwd");
            var passwordFieldType = passwordField.attr("type");

            if (passwordFieldType === "password") {
                passwordField.attr("type", "text");
                $(".toggle-password i").removeClass("fas fa-eye-slash").addClass("fas fa-eye");
            } else {
                passwordField.attr("type", "password");
                $(".toggle-password i").removeClass("fas fa-eye").addClass("fas fa-eye-slash");
            }
        });
        //Sameasreg
        {
            $("#Sameasreg").change(function () {
                var CmpCaddr = $("#CmpCaddr").val();
                var CmpCcntId = $("#CmpCcntId").val();
                var CmpCstId = $("#CmpCstId").val();
                var CmpCcity = $("#CmpCcity").val();

                if ($(this).prop("checked")) {
                    // Save the original values before updating
                    $(this).data('originalCmpCaddr', CmpCaddr);
                    $(this).data('originalCmpCcntId', CmpCcntId);
                    $(this).data('originalCmpCstId', CmpCstId);
                    $(this).data('originalCmpCcity', CmpCcity);

                    // Update the fields with registration values
                    $("#CmpCaddr").val($("#CmpRegAddr").val());
                    $("#CmpCcntId").val($("#cmpRgcntryId").val());
                    $("#CmpCstId").val($("#CmpRgstateId").val());
                    $("#CmpCcity").val($("#CmpRegCity").val());
                } else {
                    // Restore the original values when the checkbox is unchecked
                    $("#CmpCaddr").val($(this).data('originalCmpCaddr'));
                    $("#CmpCcntId").val($(this).data('originalCmpCcntId'));
                    $("#CmpCstId").val($(this).data('originalCmpCstId'));
                    $("#CmpCcity").val($(this).data('originalCmpCcity'));
                }
            });


        
        }
        //Get Dropdown Data
        {
            

            // GET Country
            $.ajax({
                url: '@Url.Action("COUNTRY", "RegisterCompany")',
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    if (response.length > 0) {
                        let list = "<option value=''>Select Country</option>";
                        for (var i = 0; i < response.length; i++) {
                            list += "<option value='" + response[i].CntryId + "'>" + response[i].CntryCode + "-" + response[i].CntryName + "</option>";
                        }
                        $("#cmpRgcntryId").html(list);
                        $("#CmpCcntId").html(list);
                    }
                },
                error: function (error) {
                    notify(error.responseText, "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                    console.error('Error:', error.responseText);
                }
            });
            // GET State
            $.ajax({
                url: '@Url.Action("STATE", "RegisterCompany")',
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    if (response.length > 0) {
                        let list = "<option value=''>Select State</option>";
                        for (var i = 0; i < response.length; i++) {
                            list += "<option value='" + response[i].StateId + "'>" + response[i].StateCode + "-" + response[i].StateName + "</option>";
                        }
                        $("#CmpRgstateId").html(list);
                        $("#CmpCstId").html(list);
                    }
                },
                error: function (error) {
                    notify(error.responseText, "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                    console.error('Error:', error.responseText);
                }
            });

        }
        //Region Add User
        {
            $("#Form_Save_btn").click(function () {
                let isValid = true;
                let formData = {};
                $("#RegisterCompany_Form input,select,textarea").each(function () {
                    var inputName = $(this).attr('name');
                    var inputValue = "";
                    if ($(this).find('textarea').lenght) {
                        inputValue = $(this).text();
                    } else {
                        inputValue = $(this).val();
                    }
                    var mandatoryfields = ["CmpCode", "CmpName", "CmpPanno", "CmpTanno", "CmpEstbDt", "CmpRegAddr", "CmpRegCity", "CmpRgstateId", "cmpRgcntryId", "CmpCaddr", "CmpCcity", "CmpCstId", "CmpCcntId", "CmpEmailidn", "CmpPhone", "CmpWeburl", "CmpMobno", "CmpGstin", "CmpCINno"]

                    var inputElement = $("#" + inputName);
                    var inputId = inputElement.attr('id');
                    var labelText = $("label[for='" + inputId + "']").text();
                    if (mandatoryfields.includes(inputName) && inputValue === "") {
                        if (inputElement.hasClass("select2-hidden-accessible")) {
                            inputElement.next('.select2-container').addClass("select2-error");
                        } else {
                            inputElement.addClass("border-danger");
                        }
                        isValid = false;
                        notify("Please Fill " + labelText + " Details..!", "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                        return false;
                    } else {
                        if (inputElement.hasClass("select2-hidden-accessible")) {
                            inputElement.next('.select2-container').removeClass("select2-error");
                        } else {
                            inputElement.removeClass("border-danger");
                        }
                    }
                    if (inputName !== undefined && inputName !== "" && inputName !== null) {

                        if (inputName == "CmpEstbDt" || inputName == "Cmp_ValidTodt" || inputName == "Cmp_ValidFrdt") {
                            var dateAndTime = inputValue.split(" ");
                            formData[inputName] = dateAndTime[0];
                        }
                        else 
                        {
                            formData[inputName] = inputValue;
                        }

                    }
                });
               
                   
                //Call Api
                if (isValid && formData != "") {

                    $.ajax({
                        url: '@Url.Action("POSTDATA","RegisterCompany")',
                        type: 'POST',
                        dataType: 'json',
                        data: formData,
                        success: function (response) {
                          
                            if (response !== "") {
                                $("#Form_reset_btn").click()

                                notify("Branch Added Succefully ..!", "", "top", "right", "fa fa-check mr-2", "success", "animated fadeInRight", "animated fadeOutRight")
                                $("#RegisterCompany_Form")[0].reset();
                                LoadTableData();
                            }
                        },
                        error: function (error) {
                            notify(error.responseText, "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                            console.error('Error:', error.responseText);
                        }
                    });
                }
            })
        }
        //Region Update User
        {
            $("#Form_Update_btn").click(function () {
                let isValid = true;
                let formData = {};
                $("#RegisterCompany_Form input,select,textarea").each(function () {
                    var inputName = $(this).attr('name');
                    var inputValue = "";
                    if ($(this).find('textarea').lenght) {
                        inputValue = $(this).text();
                    } else {
                        inputValue = $(this).val();
                    }
                    var mandatoryfields = ["CmpCode", "CmpName", "CmpPanno", "CmpTanno", "CmpEstbDt", "CmpRegAddr", "CmpRegCity", "CmpRgstateId", "cmpRgcntryId", "CmpCaddr", "CmpCcity", "CmpCstId", "CmpCcntId", "CmpEmailidn", "CmpPhone", "CmpWeburl", "CmpMobno", "CmpGstin", "CmpCINno"]
                    var inputElement = $("#" + inputName);
                    var inputId = inputElement.attr('id');
                    var labelText = $("label[for='" + inputId + "']").text();
                    if (mandatoryfields.includes(inputName) && inputValue === "") {
                        if (inputElement.hasClass("select2-hidden-accessible")) {
                            inputElement.next('.select2-container').addClass("select2-error");
                        } else {
                            inputElement.addClass("border-danger");
                        }
                        isValid = false;
                        notify("Please Fill " + labelText + " Details..!", "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                        return false;
                    } else {
                        if (inputElement.hasClass("select2-hidden-accessible")) {
                            inputElement.next('.select2-container').removeClass("select2-error");
                        } else {
                            inputElement.removeClass("border-danger");
                        }
                    }
                    if (inputName !== undefined && inputName !== "" && inputName !== null) {
                        if (inputName == "CmpEstbDt" || inputName == "Cmp_ValidTodt" || inputName == "Cmp_ValidFrdt") {
                            var dateAndTime = inputValue.split(" ");
                            formData[inputName] = dateAndTime[0];
                        }
                        else {
                            formData[inputName] = inputValue;
                        }

                    }
                });
                //Call Api
                if (isValid && formData !== "") {
                    $.ajax({
                        url: '@Url.Action("UPDATEDATA","RegisterCompany")',
                        type: 'POST',
                        dataType: 'json',
                        data: formData,
                        success: function (response) {
                            if (response.success) {
                                $("#RegisterCompany_Form")[0].reset();
                                $("#Form_reset_btn").click()
                                LoadTableData();
                                HideBtn()
                                notify(response.message, "", "top", "right", "fa fa-check mr-2", "success", "animated fadeInRight", "animated fadeOutRight")
                            } else {
                                notify("Error To Updating Data", "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                            }
                        },
                        error: function (error) {
                            notify(error.responseText, "", "top", "right", "fa fa-warning mr-2", "danger", "animated fadeInRight", "animated fadeOutRight")
                            console.error('Error:', error.responseText);
                        }
                    });
                }
            })
        }
        //Region Delete
        {
            $("#Form_Delete_btn").click(function () {
                Delete($("#BrchId").val());
            })
            $(document).on("click", ".table_delete", function () {
                var $row = $(this).closest("tr");
                var id = $row.find('td.tbl_Main_ID').text();
                Delete(id);
            })
        }
        //Region Select Row Data
        {
            //Region Select Row Data
            $(document).on("click", ".table_edit", function () {
                var $row = $(this).closest("tr");
                $row.addClass("active");
                bindrecord($row)
            })
            {
                function bindrecord($row) {
                    var rowObject = {};
