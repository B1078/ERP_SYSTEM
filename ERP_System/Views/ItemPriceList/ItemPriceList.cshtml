        // Events
        {
            $("#Price").on("input", function () {
                var Price = $(this).val();
                var BasePrice = $("#BasePrice").val();
                if (BasePrice == Price) {
                    $("#IsManual").prop("checked", false).val("N");
                } else {
                    $("#IsManual").prop("checked", true).val("Y");
                }
            });

            // Calculate Discount
            $("#Price, #Factor").on("input", function () {
                CalculateDiscount();
            });

            function CalculateDiscount() {
                var BasePrice = parseFloat($("#BasePrice").val()).toFixed(2);
                var Factor = parseFloat($("#Factor").val()).toFixed(2);
                var Discount;
                var Price = parseFloat($("#Price").val());

                if (Factor == 1) {
                    Discount = 0;
                    Price = BasePrice;
                } else {
                    Discount = BasePrice * Factor;
                    Price = BasePrice - Discount;
                }

                // Ensuring the values are rounded to two decimal places for display
                Discount = Discount.toFixed(2);
                Price = Price.toFixed(2);

                $("#Discount").val(Discount);
                $("#Price").val(Price);
            }
        }


        //Region Add
        {
            $("#Form_Save_btn").click(function () {
                let isValid = true;
                let formData = {};
                $("#ItemPriceList_form input, select, textarea").each(function () {
                    var inputName = $(this).attr('name');
                    var inputValue = "";
                    if ($(this).is('textarea')) {
                        inputValue = $(this).val();
                    } else {
                        inputValue = $(this).val();
                    }
                    var mandatoryfields = ["ItemId", "PListId", "DefBasePList"];// Include GSTINType in mandatory fields
                    var inputElement = $("#" + inputName);
                    var inputId = inputElement.attr('id');
                    var labelText = $("label[for='" + inputId + "']").text();
                    if (mandatoryfields.includes(inputName) && inputValue === "") {
                        if (inputElement.hasClass("select2-hidden-accessible")) {
                            inputElement.next('.select2-container').addClass("select2-error");
                        } else {
                            inputElement.addClass("border-danger");
                        }
